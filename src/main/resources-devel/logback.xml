<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d [%t] %-5p %c{10} - %m%n%ex</pattern>
    </encoder>
  </appender>

  <logger name="org.seasar.extension.jdbc">
    <level value="DEBUG" />
  </logger>
  <logger name="org.seasar.extension.dbcp">
    <level value="DEBUG" />
  </logger>
  <logger name="org.seasar.extension.jta">
    <level value="DEBUG" />
  </logger>

  <root>
    <level value="ERROR" />
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
